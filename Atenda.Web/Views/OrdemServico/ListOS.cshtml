@model IEnumerable<Atenda.Data.OrdemServico>

@{
    ViewBag.Title = "Lista de OS";
}

<h2>Lista de OS</h2>

<p>
    @Html.ActionLink("Cadastrar nova OS", "CreateOS")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClienteNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TecnicoNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Equipamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Custo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
            @Html.HiddenFor(modelItem => item.IdOS)

        <td>
            @Html.DisplayFor(modelItem => item.ClienteNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TecnicoNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Equipamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Modelo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Custo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Editar", "EditOS", new { pId = item.IdOS }) |
            @Html.ActionLink("Exibir", "DetailsOS", new { pId = item.IdOS }) |
            @Html.ActionLink("Deletar", "DeleteOS", new { pId = item.IdOS })
        </td>
    </tr>
}

</table>
