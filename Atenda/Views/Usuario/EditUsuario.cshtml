@model Atenda.Data.Usuario

@{
    ViewBag.Title = "Editar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="new-page">
        <div class="form-horizontal">
            <h2>Editar Usuario</h2>
            <hr />
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.IdUsuario)

            <div class="form-group">
                @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome)
                    @Html.ValidationMessageFor(model => model.Nome)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Senha, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Senha)
                    @Html.ValidationMessageFor(model => model.Senha)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmaSenha, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmaSenha)
                    @Html.ValidationMessageFor(model => model.ConfirmaSenha)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Adm, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Adm)
                    @Html.ValidationMessageFor(model => model.Adm)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<div class="btn btn-default">
    @Html.ActionLink("Voltar a Lista", "ListUsuarios")
</div>
